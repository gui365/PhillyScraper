{{!-- FIXED HEADER AND LOGO --}}
<header class="d-flex justify-content-center align-items-center">
  <h1 id="header-name">PHILLY &nbsp;SCRAPPER</h1>
</header>

<img class="logo" src="./images/ps_logo2.png" alt="Philly Scraper Logo">

{{!-- POPULATING AFTER SCRAPING --}}
<main>
  <div class="container">
    <div class="row justify-content-center">
      {{#each articles}}
        <div class="card justify-content-center" style="width: 18rem;">
          <div class="card-img-top" style="{{this.picture}}; height: 200px; background-size: cover;" alt="Event image"></div>
          <div class="card-body">
            <h5 class="card-title title">{{this.title}}</h5>
            <p class="card-text description">{{this.description}}</p>
            <a href={{this.link}} class="btn btn-primary" target="_blank">View</a>
            <a href="#" class="btn btn-primary">Comment</a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</main>

