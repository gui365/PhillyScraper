{{!-- FIXED HEADER AND LOGO --}}
<header class="d-flex justify-content-center align-items-center">
  <h1 id="header-name">PHILLY &nbsp;SCRAPER</h1>
</header>

<img class="logo" src="./images/ps_logo4.png" alt="Philly Scraper Logo">

{{!-- POPULATING AFTER SCRAPING --}}
<main>
  <div class="container">
    <div class="row justify-content-center">
      <a href="/scrape" class="btn btn-primary scrape-btn">
      Find Events
      </a>
    </div>
    <div class="d-flex justify-content-center">
      <img id="logo-big" style="margin: 2rem 0; width: 50vh; height: 100%" src="./images/ps_logo4.png" alt="Philly Scraper Logo">
    </div>
    <div class="articles row justify-content-center">
      {{#each dbArticles}}
        <div class="card justify-content-center" style="width: 18rem;">
          <div class="card-img-top" style="{{this.picture}}; height: 200px; background-size: cover;" alt="Event image"></div>
          <div class="card-body">
            <h5 class="card-title title">{{this.title}}</h5>
            <p class="card-text description">{{this.description}}</p>
            <a href={{this.link}} class="btn btn-primary" target="_blank">View</a>
            <a id="modal-comment" data-toggle="modal" data-target=".modal-comment"><i class="fas fa-pencil-alt comments" data-id={{this._id}}></i></a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</main>

{{!-- FOOTER --}}
<div class="card text-center footer">
  <div class="card-body">
    <div class="accounts">
      <a href="https://github.com/gui365/PhillyScraper" target="_blank"><i class="fab fa-github"></i></a>
      {{!-- <a href="https://stackoverflow.com/users/9636342/g-barila" target="_blank"><i class="fab fa-stack-overflow"></i></a> --}}
      <a href="https://www.linkedin.com/in/gbarila" target="_blank"><i class="fab fa-linkedin-in"></i></a>
    </div>
  </div>
    <p>COPYRIGHT &copy; 2018 &nbsp; <b>GUILLERMO BARILA</b></p>
  </div>
</div>

{{!-- COMMENTS MODAL --}}
<div class="modal fade modal-comment" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header d-flex flex-wrap flex-columns">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <span style="display: none;" class="article-id">data-id={{this._id}}</span>
        <h4 class="modal-title">{{article.title}}</h4>
        <h6 class="make-comment">Make a comment about this article:</h6>
      </div>
      <div class="modal-body">
        <form action="">
          <div class="form-group">
            <label for="comment-body"></label>
            <textarea class="form-control" id="comment-body" rows="3"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary save-comment">Save comment</button>
      </div>
    </div>
  </div>
</div>


